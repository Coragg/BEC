<style>
.cards-wrapper {
  display: flex;
  overflow-x: auto; /* Permite el scroll horizontal */
  gap: 20px; /* Espacio entre las tarjetas */
  padding: 20px; /* Espacio en los extremos del contenedor */
  scrollbar-width: none; /* Oculta la barra de desplazamiento en Firefox */
  -ms-overflow-style: none; /* Oculta la barra de desplazamiento en Internet Explorer y Edge */
}

.cards-wrapper::-webkit-scrollbar {
  display: none; /* Oculta la barra de desplazamiento en navegadores basados en WebKit (Chrome, Safari) */
}


  .card {
      flex: 0 0 auto;
      width: 300px; /* Ancho fijo para cada tarjeta (ajusta seg√∫n tus necesidades) */
      box-shadow: 2px 6px 8px 0 rgba(22, 22, 26, 0.18);
      border: none;
      border-radius: 0;
  }

  .card img {
      max-width: 100%;
      max-height: 100%;
  }

  

  @media (min-width: 768px) {
      .card img {
          height: 11em;
      }
  }
</style>


<script>
const cardsWrapper = document.querySelector(".cards-wrapper");
const prevButton = document.querySelector(".carousel-control-prev");
const nextButton = document.querySelector(".carousel-control-next");
cardsWrapper.addEventListener("wheel", (event) => {
  const wheelEvent = event as WheelEvent; // Convertir event a WheelEvent

  if (wheelEvent.deltaY !== 0) {
    event.preventDefault();
    cardsWrapper.scrollLeft += wheelEvent.deltaY;
  }
});

prevButton.addEventListener("click", () => {
  cardsWrapper.scrollLeft -= 100; // Ajusta la cantidad de desplazamiento necesario
});

nextButton.addEventListener("click", () => {
  cardsWrapper.scrollLeft += 100; // Ajusta la cantidad de desplazamiento necesario
});
</script>