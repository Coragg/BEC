---
interface Post{
    link?: string;
    messageButton?: string;
    information?: string;
}
const {link="", messageButton="Enter", information=""} = Astro.props; 
---

<div class="card shadow" style="width:300px">
    <img class="card-img-top" src={link} alt="Card image" style="width:100%">
    <div class="card-body">
        <p class="card-text">{information}</p>
        <a href="#" class="btn btn-primary" style="">{messageButton}</a>
    </div>
</div>
<div class="slider">
    <div class="slider-item">
        <img class="" src={link} alt="" style="width100%">
    </div>
    <div class="slider-item">
        <img class="" src={link} alt="" style="width100%">
    </div>
    <div class="slider-item">
        <img class="" src={link} alt="" style="width100%">
    </div>

    <button class="prev">left</button>
    <button class="next">right</button>
</div>
<style>
  .slider {
    display: flex;
    overflow: hidden;
  }
  
  .slider-item {
    flex: 0 0 100%;
    padding: 10px;
    box-sizing: border-box;
  }
  
  button.prev,
  button.next {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background-color: #333;
    color: #fff;
    border: none;
    padding: 10px 20px;
    cursor: pointer;
  }
  
  button.prev {
    left: 0;
  }
  
  button.next {
    right: 0;
  }

</style>

