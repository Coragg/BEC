---
import Header from '../components/principales/Header.astro';
import Footer from "../components/principales/Footer.astro";



interface Post{
    title?: string;
}

const {title=""} = Astro.props; 
---
<html lang="es">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/LogoSinFondo.png" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>BEC {title}</title>
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

	</head>
	<body>
        <Header/>
        <slot/>
        <Footer/>
    </body>
</html>

<style>
body {
	background: #d9a7c7; /* fallback for old browsers */
	background: -webkit-linear-gradient(to top, #d9a7c7, #fffcdc); /* Chrome 10-25, Safari 5.1-6 */
	background: linear-gradient(to top, #d9a7c7, #fffcdc); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
}
</style>